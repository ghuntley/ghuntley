{
  "display": "Configuration for Exercism TypeScript Exercises",
  "compilerOptions": {
    "lib": ["ESNEXT", "dom"],
    "module": "ES2020",
    "target": "ESNext",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true
  },
  "include": ["*.ts", "*.tsx", ".meta/*.ts", ".meta/*.tsx"],
  "exclude": ["node_modules"]
}
